# Ultra Search Environment Variables
# Copy this file to .env and fill in your API keys

# ============================================
# Global API Keys
# ============================================

# OpenAI API key (for deep research)
ULTRA_OPENAI_API_KEY=sk-...

# Web Search Providers
ULTRA_SERPAPI_API_KEY=
ULTRA_TAVILY_API_KEY=
ULTRA_BRAVE_API_KEY=

# Deep Research Providers
ULTRA_PERPLEXITY_API_KEY=

# ============================================
# Domain Configuration
# ============================================
# Enable/disable domains via environment variables

# Web Search
ULTRA_DOMAINS__WEB_SEARCH__ENABLED=true
ULTRA_DOMAINS__WEB_SEARCH__DEFAULT_PROVIDER=mock

# Deep Research
ULTRA_DOMAINS__DEEP_RESEARCH__ENABLED=true
ULTRA_DOMAINS__DEEP_RESEARCH__DEFAULT_PROVIDER=openai

# Financial (disabled by default)
ULTRA_DOMAINS__FINANCIAL__ENABLED=false

# Legal (disabled by default)
ULTRA_DOMAINS__LEGAL__ENABLED=false

# Academic (disabled by default)
ULTRA_DOMAINS__ACADEMIC__ENABLED=false

# ============================================
# Provider-Specific Configuration
# ============================================
# Override API keys per-domain if needed

# Example: Use a different OpenAI key for deep research
# ULTRA_DOMAINS__DEEP_RESEARCH__PROVIDERS__OPENAI__API_KEY=sk-different-key

# Example: Configure SerpAPI for web search
# ULTRA_DOMAINS__WEB_SEARCH__PROVIDERS__SERPAPI__API_KEY=your-key

# ============================================
# Execution Settings
# ============================================
ULTRA_MAX_CONCURRENT_REQUESTS=10
ULTRA_DEFAULT_TIMEOUT=30.0
ULTRA_RETRY_ATTEMPTS=3
